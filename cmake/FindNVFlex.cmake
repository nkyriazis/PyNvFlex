if(NOT NVFlex_FOUND)
    if(CMAKE_SIZEOF_VOID_P EQUAL 8)
        set(NVFLEX_PLATFORM_SUFFIX x64)
    else()
        set(NVFLEX_PLATFORM_SUFFIX x86)
    endif()
    
    find_library(NVFLEX_LIB_OPTIMIZED "flexRelease_${NVFLEX_PLATFORM_SUFFIX}")
    find_library(NVFLEX_LIB_DEBUG "flexDebug_${NVFLEX_PLATFORM_SUFFIX}")
    find_library(NVFLEX_EXTLIB_OPTIMIZED "flexExtRelease_${NVFLEX_PLATFORM_SUFFIX}")
    find_library(NVFLEX_EXTLIB_DEBUG "flexExtDebug_${NVFLEX_PLATFORM_SUFFIX}")
    find_path(NVFLEX_INCLUDE_DIR flex.h)
    
    if(NVFLEX_LIB_OPTIMIZED AND NVFLEX_LIB_DEBUG AND NVFLEX_EXTLIB_OPTIMIZED AND NVFLEX_EXTLIB_DEBUG AND NVFLEX_INCLUDE_DIR)
        set(NVFlex_FOUND TRUE)
        set(NVFlex_INCLUDE_DIR ${NVFLEX_INCLUDE_DIR})
        set(NVFlex_LIBRARIES "optimized;${NVFLEX_LIB_OPTIMIZED};${NVFLEX_EXTLIB_OPTIMIZED};debug;${NVFLEX_LIB_DEBUG};${NVFLEX_EXTLIB_DEBUG}")
    else()
        set(NVFlex_FOUND FALSE)
    endif()
endif()